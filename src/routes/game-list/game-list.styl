.game-list-body
  ul
    list-style none
    padding 0
    margin 12px
    display grid
    grid-template-columns repeat(auto-fill, 600px)
    gap 12px
    justify-content center
    li
      width 600px
  .game-list-action
    display flex
    flex-direction row
    .game-list-action-content
      display flex
      flex-direction column
      justify-content space-evenly
      h2
        margin 0 12px
        line-height 2rem
      h3
        margin 0 12px
        line-height 2rem
  .game-list-thumb
    width 164px
    height 90px
